import 'dart:ui';

import 'package:flutter/material.dart';

var usuarios = ['admin'];
String atualUser = '';
var senhas = ['12345678'];

void main() {
  runApp(
    MaterialApp(
      debugShowCheckedModeBanner: false,
      title: 'Projeto D.M.',

      //
      // ROTAS DE NAVEGAÇÃO
      //
      initialRoute: 'login',
      routes: {
        'login': (context) => TelaLogin(),
        't0': (context) => TelaMenu(),
        't1': (context) => TelaPrincipal(),
        't2': (context) => TelaCadastro(),
        't3': (context) => TelaSugestao(),
        't4': (context) => TelaDoacao(),
        // ----------------------------------------
        'tl1': (context) => TelaLivro1(),
        'tl2': (context) => TelaLivro2(),
        'tl3': (context) => TelaLivro3(),
        'tl4': (context) => TelaLivro4(),
        'tl5': (context) => TelaLivro5(),
        'tl6': (context) => TelaLivro6(),
        'tl7': (context) => TelaLivro7(),
        'tl8': (context) => TelaLivro8(),
        'tl9': (context) => TelaLivro9(),
        'tl10': (context) => TelaLivro10(),
      },
    ),
  );
}

void verificaUsuario() {}
//
// TELA LOGIN
//

class TelaLogin extends StatefulWidget {
  const TelaLogin({Key? key}) : super(key: key);

  @override
  _TelaLoginState createState() => _TelaLoginState();
}

class _TelaLoginState extends State<TelaLogin> {
  TextEditingController txtUsuario = TextEditingController();
  TextEditingController txtSenha = TextEditingController();

  var formKey = GlobalKey<FormState>();

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Container(
        decoration: BoxDecoration(
          color: const Color.fromRGBO(168, 137, 255, 1.0),
          borderRadius: BorderRadius.circular(20),
        ),
        padding: EdgeInsets.all(20),
        child: Form(
          key: formKey,
          child: Column(
            children: [
              Row(
                mainAxisAlignment: MainAxisAlignment.end,
                children: [
                  IconButton(
                    onPressed: () async {
                      await showDialog(
                        context: context,
                        builder: (context) {
                          return AlertDialog(
                            backgroundColor: Colors.deepPurpleAccent,
                            title: Row(
                              mainAxisAlignment: MainAxisAlignment.end,
                              crossAxisAlignment: CrossAxisAlignment.start,
                              children: [
                                Text(
                                  'Sobre',
                                  style: TextStyle(
                                    fontSize: 22,
                                    color: Colors.black,
                                    backgroundColor: Colors.blueAccent,
                                  ),
                                ),
                                Container(
                                  width: 70,
                                ),
                                Column(
                                  children: [
                                    Image.asset(
                                      "images/arislan.jpg",
                                      height: 100.0,
                                    ),
                                    Text('Arislan M.'),
                                  ],
                                )
                              ],
                            ),
                            content: Column(
                              mainAxisAlignment: MainAxisAlignment.start,
                              crossAxisAlignment: CrossAxisAlignment.start,
                              children: [
                                Divider(),
                                Text(
                                  'Tema:\n - Biblioteca',
                                  textAlign: TextAlign.justify,
                                  style: TextStyle(
                                    fontSize: 20,
                                  ),
                                ),
                                Container(
                                  height: 50,
                                ),
                                Text(
                                  'Objetivo:\n - Disponibilizar livros gratuitamente aos usuários',
                                  textAlign: TextAlign.justify,
                                  style: TextStyle(
                                    fontSize: 20,
                                  ),
                                ),
                              ],
                            ),
                          );
                        },
                      );
                    },
                    icon: Icon(Icons.quiz),
                  ),
                ],
              ),
              Image.asset(
                "images/book.png",
                height: 200.0,
                //fit: BoxFit.fill,
              ),
              Text.rich(
                TextSpan(
                  text: ('A.M. LIBRARY'),
                  style: TextStyle(
                    color: Colors.black,
                    backgroundColor: Colors.blueAccent,
                    fontSize: 24,
                    letterSpacing: 0,
                    shadows: [
                      Shadow(
                        color: Colors.black26,
                        blurRadius: 2,
                        offset: Offset.fromDirection(45),
                      ),
                    ],
                  ),
                ),
              ),
              Container(
                height: 35,
              ),
              campoTexto('Usuário', txtUsuario, false),
              campoTexto('Senha', txtSenha, true),
              ElevatedButton(
                style: ButtonStyle(
                  minimumSize: MaterialStateProperty.all<Size>(
                      Size(double.infinity, 50)),
                  backgroundColor:
                      MaterialStateProperty.all<Color>(Colors.deepPurple),
                ),
                child: Text('Entrar'),
                onPressed: () {
                  //
                  // Executar o validador dos campos de texto
                  //
                  for (int i = 0; i <= usuarios.length; i++)
                    if (txtUsuario.text == usuarios[i] &&
                        txtSenha.text == senhas[i]) {
                      atualUser = txtUsuario.text;
                      Navigator.pushNamed(context, 't0');
                    }
                },
              ),
              Divider(),
              ElevatedButton(
                style: ButtonStyle(
                  minimumSize: MaterialStateProperty.all<Size>(
                      Size(double.infinity, 50)),
                  backgroundColor:
                      MaterialStateProperty.all<Color>(Colors.deepPurple),
                ),
                child: Text('Cadastrar'),
                onPressed: () {
                  Navigator.pushNamed(context, 't2');
                },
              ),
              // btnEntrar('Entrar', 't1'),
              Divider(),
              //btnCadastrar('Cadastrar'),
            ],
          ),
        ),
      ),
    );
  }
}

//
// TELA CADASTRO
//

class TelaCadastro extends StatefulWidget {
  const TelaCadastro({Key? key}) : super(key: key);

  @override
  _TelaCadastroState createState() => _TelaCadastroState();
}

class _TelaCadastroState extends State<TelaCadastro> {
  TextEditingController txtUsuario = TextEditingController();
  TextEditingController txtSenha = TextEditingController();

  var formKey2 = GlobalKey<FormState>();

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        shape: RoundedRectangleBorder(
          borderRadius: BorderRadius.only(
              topLeft: Radius.circular(20), topRight: Radius.circular(20)),
        ),
        title: Text('CADASTRO DE USUÁRIO'),
        centerTitle: true,
        backgroundColor: Colors.deepPurple,
      ),
      body: Container(
        decoration: BoxDecoration(
          color: const Color.fromRGBO(168, 137, 255, 1.0),
          borderRadius: BorderRadius.only(
              bottomLeft: Radius.circular(20),
              bottomRight: Radius.circular(20)),
        ),
        padding: EdgeInsets.all(20),
        child: Form(
          key: formKey2,
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              TextFormField(
                keyboardType: TextInputType.text,
                controller: txtUsuario,
                decoration: InputDecoration(
                  labelText: ('Informe o usuário'),
                  labelStyle: TextStyle(color: Colors.black),
                  border: OutlineInputBorder(
                    borderRadius: BorderRadius.circular(20),
                  ),
                  focusedBorder: OutlineInputBorder(
                    borderSide: BorderSide(
                      color: Colors.black,
                    ),
                  ),
                ),
                //
                // VALIDADOR
                //
                validator: (value) {
                  if (value == '') return 'Favor informar um nome de usuário';
                  for (int i = 0; i < usuarios.length; i++) {
                    if (usuarios[i] == value)
                      return 'Nome de usuário já utilizado, favor escolher outro!';
                  }
                  return null;
                },
              ),
              Divider(),
              TextFormField(
                keyboardType: TextInputType.text,
                controller: txtSenha,
                decoration: InputDecoration(
                  labelText: ('Informe a senha'),
                  labelStyle: TextStyle(color: Colors.black),
                  border: OutlineInputBorder(
                    borderRadius: BorderRadius.circular(20),
                  ),
                  focusedBorder: OutlineInputBorder(
                    borderSide: BorderSide(
                      color: Colors.black,
                    ),
                  ),
                ),
                //
                // VALIDADOR
                //
                validator: (value) {
                  if (value!.length < 8)
                    return 'Favor, inserir uma senha com no mínimo 8 caracteres!';
                  return null;
                },
              ),
              Divider(),
              btnCadastrar('Cadastrar'),
            ],
          ),
        ),
      ),
    );
  }

  Widget btnCadastrar(rotulo) {
    return ElevatedButton(
      style: ButtonStyle(
        minimumSize: MaterialStateProperty.all<Size>(Size(double.infinity, 50)),
        backgroundColor: MaterialStateProperty.all<Color>(Colors.deepPurple),
      ),
      child: Text(rotulo),
      onPressed: () {
        if (formKey2.currentState!.validate()) {
          setState(() {
            usuarios.add(txtUsuario.text);
            senhas.add(txtSenha.text);
          });
          caixaDialogo('Usuário criado com sucesso!');
        }
      },
    );
  }

  caixaDialogo(msg) {
    return showDialog(
      context: context,
      builder: (BuildContext context) {
        return AlertDialog(
          title: Text('Resultado'),
          content: Text(msg),
          actions: [
            TextButton(
              child: Text('Fechar'),
              onPressed: () {
                Navigator.pushNamed(context, 'login');
              },
            ),
          ],
        );
      },
    );
  }
}
//
// TELA MENU
//

class TelaMenu extends StatefulWidget {
  const TelaMenu({Key? key}) : super(key: key);

  @override
  _TelaMenuState createState() => _TelaMenuState();
}

class _TelaMenuState extends State<TelaMenu> {
  int selectedRadio = 0;

  @override
  void initState() {
    super.initState();
    selectedRadio = 0;
  }

  setSelectedRadio(var val) {
    setState(() {
      selectedRadio = val;
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        shape: RoundedRectangleBorder(
          borderRadius: BorderRadius.only(
              topLeft: Radius.circular(20), topRight: Radius.circular(20)),
        ),
        title: Text('BEM-VINDO: $atualUser'),
        centerTitle: true,
        backgroundColor: Colors.deepPurple,
      ),
      body: Container(
        decoration: BoxDecoration(
          color: const Color.fromRGBO(168, 137, 255, 1.0),
          borderRadius: BorderRadius.only(
              bottomLeft: Radius.circular(20),
              bottomRight: Radius.circular(20)),
        ),
        padding: EdgeInsets.all(20),
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Container(
              decoration: BoxDecoration(
                color: Colors.deepPurpleAccent,
                /*boxShadow: [
                  BoxShadow(
                    color: Colors.purple,
                  ),
                ],*/
              ),
              child: Row(
                children: [
                  Radio(
                    value: 1,
                    groupValue: selectedRadio,
                    activeColor: Colors.orange,
                    onChanged: (value) {
                      setSelectedRadio(value);
                    },
                  ),
                  SizedBox(width: 10.0),
                  Text('Ir para biblioteca'),
                ],
              ),
            ),
            Container(
              decoration: BoxDecoration(color: Colors.blue),
              child: Row(
                children: [
                  Radio(
                    value: 2,
                    groupValue: selectedRadio,
                    activeColor: Colors.green,
                    onChanged: (value) {
                      setSelectedRadio(value);
                    },
                  ),
                  SizedBox(width: 10.0),
                  Text('Fazer uma sugestão'),
                ],
              ),
            ),
            Container(
              decoration: BoxDecoration(
                color: Colors.deepPurpleAccent,
              ),
              child: Row(
                children: [
                  Radio(
                    value: 3,
                    groupValue: selectedRadio,
                    activeColor: Colors.blue,
                    onChanged: (value) {
                      setSelectedRadio(value);
                    },
                  ),
                  SizedBox(width: 10.0),
                  Text('Realizar doação'),
                ],
              ),
            ),
            Divider(),
            ElevatedButton(
              style: ButtonStyle(
                minimumSize:
                    MaterialStateProperty.all<Size>(Size(double.infinity, 50)),
                backgroundColor:
                    MaterialStateProperty.all<Color>(Colors.deepPurple),
              ),
              onPressed: () {
                if (selectedRadio == 1) {
                  Navigator.pushNamed(context, 't1');
                } else if (selectedRadio == 2) {
                  Navigator.pushNamed(context, 't3');
                } else {
                  Navigator.pushNamed(context, 't4');
                }
              },
              child: Text('Entrar'),
            ),
          ],
        ),
      ),
    );
  }
}

//
// TELA PRINCIPAL
//

class TelaPrincipal extends StatefulWidget {
  const TelaPrincipal({Key? key}) : super(key: key);

  @override
  _TelaPrincipalState createState() => _TelaPrincipalState();
}

class _TelaPrincipalState extends State<TelaPrincipal> {
  // Lista estática que contém os livros disponíveis para leitura
  var livros = [];
  var telasLivros = [];

  @override
  void initState() {
    livros.add("Dom Quixote, Miguel de Cervantes, 1605");
    livros.add("Guerra e Paz, Liev Tolstói, 1869");
    livros.add("A Montanha Mágica, Thomas Mann, 1924");
    livros.add("Cem Anos de Solidão, Gabriel García Márquez, 1967");
    livros.add("Ulisses, James Joyce, 1922");
    livros.add("Em Busca do Tempo Perdido, Marcel Proust, 1913");
    livros.add("A Divina Comédia, Dante Alighieri, 1321");
    livros.add("O Homem sem Qualidades, Robert Musil, 1930-1943");
    livros.add("O Processo, Franz Kafka, 1925");
    livros.add("O Som e a Fúria, William Faulkner, 1929");
    for (int i = 1; i <= 10; i++) {
      telasLivros.add('tl' + i.toString());
    }
    super.initState();
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        shape: RoundedRectangleBorder(
          borderRadius: BorderRadius.only(
              topLeft: Radius.circular(20), topRight: Radius.circular(20)),
        ),
        title: Text('BOA LEITURA!'),
        centerTitle: true,
        backgroundColor: Colors.deepPurple,
      ),
      body: Container(
        decoration: BoxDecoration(
          color: const Color.fromRGBO(168, 137, 255, 1.0),
          borderRadius: BorderRadius.only(
              bottomLeft: Radius.circular(20),
              bottomRight: Radius.circular(20)),
        ),
        padding: EdgeInsets.all(20),
        child: ListView.builder(
          // Definir a quantidade de itens
          itemCount: livros.length,
          // Definir a aparência dos itens da lista
          itemBuilder: (context, index) {
            return Card(
              elevation: 10,
              shadowColor: Colors.blue.shade200,
              child: ListTile(
                title: Text(
                  livros[index],
                  style: TextStyle(fontSize: 22),
                ),
                trailing: IconButton(
                  icon: Icon(Icons.book),
                  onPressed: () {
                    Navigator.pushNamed(context, telasLivros[index]);
                  },
                ),
              ),
            );
          },
        ),
      ),
    );
  }
}

//
// TELA SUGESTÃO
//

class TelaSugestao extends StatefulWidget {
  const TelaSugestao({Key? key}) : super(key: key);

  @override
  _TelaSugestaoState createState() => _TelaSugestaoState();
}

class _TelaSugestaoState extends State<TelaSugestao> {
  var sugLivro = TextEditingController();

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        shape: RoundedRectangleBorder(
          borderRadius: BorderRadius.only(
              topLeft: Radius.circular(20), topRight: Radius.circular(20)),
        ),
        title: Text('CAIXINHA DE SUGESTÕES'),
        centerTitle: true,
        backgroundColor: Colors.deepPurple,
      ),
      body: Container(
        padding: EdgeInsets.all(20),
        decoration: BoxDecoration(
          color: const Color.fromRGBO(168, 137, 255, 1.0),
          borderRadius: BorderRadius.only(
              bottomLeft: Radius.circular(20),
              bottomRight: Radius.circular(20)),
        ),
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Divider(),
            Image.asset(
              'images/ideas.png',
              height: 100.0,
            ),
            Divider(),
            TextField(
              controller: sugLivro,
              decoration: InputDecoration(
                labelText: ('Sugestão de livro'),
                labelStyle: TextStyle(color: Colors.black),
                border: OutlineInputBorder(
                  borderRadius: BorderRadius.circular(20),
                ),
                focusedBorder: OutlineInputBorder(
                  borderSide: BorderSide(
                    color: Colors.black,
                  ),
                ),
              ),
            ),
            SizedBox(height: 10.0),
            ElevatedButton(
              style: ButtonStyle(
                minimumSize:
                    MaterialStateProperty.all<Size>(Size(double.infinity, 50)),
                backgroundColor:
                    MaterialStateProperty.all<Color>(Colors.deepPurple),
              ),
              onPressed: () {
                showDialog(
                  context: context,
                  builder: (BuildContext context) {
                    return AlertDialog(
                      title: Text('Notificação'),
                      content: Text('Sugestão de livro enviada com sucesso!'),
                      actions: [
                        TextButton(
                          child: Text('Fechar'),
                          onPressed: () {
                            Navigator.pop(context);
                            sugLivro.text = '';
                          },
                        ),
                      ],
                    );
                  },
                );
              },
              child: Text('Enviar'),
            ),
          ],
        ),
      ),
    );
  }
}

